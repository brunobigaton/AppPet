<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tipo_cor_um"
    android:paddingTop="150dp"
    tools:context=".LoginActivity">

  <TextView
      android:id="@+id/login_text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="20dp"
      android:gravity="center"
      android:text="Login"
      android:textColor="#2971C4"
      android:textSize="30sp" />

  <TextView
      android:id="@+id/text_01"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/login_text"
      android:gravity="center"
      android:text="@string/name_user"
      android:textColor="@color/black"
      android:textSize="18sp" />

  <EditText
      android:id="@+id/user_name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="60dp"
      android:layout_marginTop="200dp"
      android:layout_marginRight="60dp"
      android:background="@color/white"
      android:drawableRight="@drawable/ic_login_pet_um"
      android:hint="username"
      android:inputType="text"
      android:maxLength="25"
      android:padding="16dp" />

  <EditText
      android:id="@+id/text_passoword"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/user_name"
      android:layout_marginLeft="60dp"
      android:layout_marginTop="10dp"
      android:layout_marginRight="60dp"
      android:background="@color/white"
      android:drawableRight="@drawable/ic_passoword_pet_um"
      android:hint="password"
      android:inputType="numberPassword"
      android:padding="16dp" />

  <TextView
      android:id="@+id/manter_logado"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/text_passoword"
      android:layout_marginTop="20dp"
      android:gravity="center"
      android:text="Manter logado"
      android:textColor="@color/black"
      android:textSize="18sp" />

  <Button
      android:id="@+id/login_button"
      android:layout_width="match_parent"
      android:layout_height="66dp"
      android:layout_below="@+id/manter_logado"
      android:layout_marginLeft="30dp"
      android:layout_marginTop="20dp"
      android:layout_marginRight="30dp"
      android:text="login"
      android:textSize="18sp" />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/login_button"
      android:layout_marginLeft="50dp"
      android:layout_marginTop="11dp"
      android:text="NÃ£o tem uma conta?"
      android:textColor="@color/black"
      android:textSize="18sp" />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/login_button"
      android:layout_alignParentEnd="true"
      android:layout_marginTop="11dp"
      android:layout_marginEnd="100dp"
      android:gravity=""
      android:text="Registre-se"
      android:textColor="#2971C4"
      android:textSize="18sp" />

  <ProgressBar
      android:id="@+id/progress_pet"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/login_button"
      android:layout_marginTop="60dp"
      android:visibility="invisible"
      android:layout_alignParentStart="true"
      android:layout_alignParentEnd="true"/>

</RelativeLayout>