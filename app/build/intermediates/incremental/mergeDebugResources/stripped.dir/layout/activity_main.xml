<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    tools:openDrawer="start">

    <LinearLayout
        android:id="@+id/menu_pet"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:background="@color/pink_light"
        android:orientation="horizontal"
        android:paddingTop="30dp">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_weight="1"
            android:background="@drawable/tipo_cor_dois"
            android:src="@drawable/ic_menu_pet_1"
            android:tint="@color/white"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_weight="1"
            android:background="@drawable/tipo_cor_tres"
            android:src="@drawable/ic_baseline_shopping_cart_24"
            android:tint="@color/white"/>

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginTop="150dp"
        android:padding="30dp">

        <View
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_below="@+id/container_pet_um"
            android:layout_marginTop="20dp"
            android:background="@drawable/tipo_cor_tres" />

        <View
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_row="0"
            android:layout_column="2"
            android:background="@drawable/tipo_cor_quatro" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/white"
            android:text="@string/servicos_pet"
            android:textColor="@color/black"
            android:theme="@style/Buttom" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginTop="28dp"
            android:backgroundTint="@color/white"
            android:text="Farmácia"
            android:textColor="@color/black"
            android:theme="@style/Buttom" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginTop="28dp"
            android:backgroundTint="@color/white"
            android:text="Acessórios"
            android:textColor="@color/black"
            android:theme="@style/Buttom" />

        <View
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_marginTop="20dp"
            android:background="@drawable/tipo_cor_dois" />

        <View
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginTop="20dp"
            android:background="@drawable/tipo_cor_tres" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/white"
            android:text="Comida"
            android:textColor="@color/black"
            android:theme="@style/Buttom" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_marginTop="28dp"
            android:backgroundTint="@color/white"
            android:text="Brinquedo"
            android:textColor="@color/black"
            android:theme="@style/Buttom" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginTop="28dp"
            android:backgroundTint="@color/white"
            android:text="Roupas"
            android:textColor="@color/black"
            android:theme="@style/Buttom" />

        <View
            android:id="@+id/container_pet_um"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/tipo_cor_dois" />

        <View
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginTop="20dp"
            android:background="@drawable/tipo_cor_quatro" />

    </GridLayout>

    <TextView
        android:id="@+id/textNamePet"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:background="@color/pink_light"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginTop="73dp"
        android:gravity="center"
        android:text="Olá,"/>


</GridLayout>